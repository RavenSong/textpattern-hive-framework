<a class="a--skip-link" href="#main"><txp:text item="go_content" /></a>
<a class="a--skip-link" href="#q"><txp:text item="go_search" /></a>
<div id="dynamic-header">
    <header class="site-header">
        <h2><txp:site_name /></h2>
    </header>
    <div class="site-navigation">
        <a id="lightswitch" href="#" role="button"><txp:text item="lightswitch" /></a>
        <a id="site-navigation-toggle" href="#" role="button" aria-controls="site-navigation"><txp:text item="navigation" /></a>
        <nav id="site-navigation" aria-label="<txp:text item="site_nav" />" itemscope itemtype="https://schema.org/SiteNavigationElement">
            <txp:section_list include_default default_title='<txp:text item="home" />' html_id="site-navigation-list" wraptag="ul" break="">
                <txp:if_section name='<txp:section />'>
                    <li class="active">
                        <a itemprop="url" href="<txp:section url />" aria-current="page"><txp:section title /></a>
                        <span class="accessibility">(<txp:text item="current" />)</span>
                    </li>
                <txp:else />
                    <li>
                        <a itemprop="url" href="<txp:section url />"><txp:section title /></a>
                    </li>
                </txp:if_section>
            </txp:section_list>
        </nav>
        <txp:if_variable name="page-type" not match="any" value="error-page,search-page">
            <div class="search-form" itemscope itemtype="https://schema.org/WebSite">
                <meta itemprop="url" content="<txp:site_url />">
                <form role="search" method="get" action="<txp:site_url />" itemprop="potentialAction" itemscope itemtype="https://schema.org/SearchAction">
                    <meta itemprop="target" content="<txp:site_url />?q={q}">
                    <label class="accessibility" for="q"><txp:text item="search" /></label>
                    <input id="q" name="q" type="search" itemprop="query-input" placeholder="<txp:text item="search" />"<txp:if_search> value="<txp:search_term />"</txp:if_search>>
                </form>
            </div>
        </txp:if_variable>
    </div>
</div>
