<section>
    <h3 class="accessibility"><txp:text item="gallery" /></h3>
    <div class="layout-container gallery no-gaps">
        <txp:evaluate>
            <txp:images category="gallery" break="" sort="date desc" limit="24">
                <div class="layout-3col">
                    <img loading="lazy" src="<txp:image_url />" alt="<txp:image_info type='alt' />" itemprop="image">
                </div>
            </txp:images>
        <txp:else />
            <div class="layout-4col">
                <img loading="lazy" src="<txp:page_url type="theme_path" />/assets/img/placeholders/img-1080x1080-1.png" alt="Placeholder Image 1" itemprop="image">
            </div>
            <div class="layout-4col">
                <img loading="lazy" src="<txp:page_url type="theme_path" />/assets/img/placeholders/img-1080x1080-2.png" alt="Placeholder Image 2" itemprop="image">
            </div>
            <div class="layout-4col">
                <img loading="lazy" src="<txp:page_url type="theme_path" />/assets/img/placeholders/img-1080x1080-3.png" alt="Placeholder Image 3" itemprop="image">
            </div>
            <div class="layout-4col">
                <img loading="lazy" src="<txp:page_url type="theme_path" />/assets/img/placeholders/img-1080x1080-4.png" alt="Placeholder Image 4" itemprop="image">
            </div>
        </txp:evaluate>
    </div>
</section>
